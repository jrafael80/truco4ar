# NPM Configuration for Truco4AR
# Use public npm registry

registry=https://registry.npmjs.org/

# Strict SSL
strict-ssl=true

# Save exact versions (no ^ or ~)
save-exact=true

# Automatically install peer dependencies
legacy-peer-deps=false

# Engine strict (enforce node version from package.json)
engine-strict=true

# Progress bar
progress=true

# Loglevel
loglevel=info
